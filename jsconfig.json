{
  "compilerOptions": {
    "target": "ES6",
    "module": "esnext",
    "baseUrl": "./",
    "moduleResolution": "node",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "allowSyntheticDefaultImports": true,
    // "exclude": ["node_modules"],
    // "experimentalDisableTemplateSupport": true,
    "jsx": "preserve", //在这里添加"jsx": "preserve",
  }
}